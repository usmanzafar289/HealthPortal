<div class="modal fade slide-up disable-scroll" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" aria-hidden="true" id="addPaymentMethodModal">
    <div class="modal-dialog">
        <div class="modal-content-wrapper">
            <div class="modal-content">
                <form asp-controller="Finance" asp-action="AddPaymentMethod" method="post" enctype="application/x-www-form-urlencoded" name="profileForm" class="ui form">
                    <div class="modal-header clearfix text-left">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="pg-close fs-14"></i>
                        </button>
                        <h5>Add <span class="semi-bold">Payment Method</span></h5>
                    </div>
                    <div class="modal-body form-group">
                        <div class="form-group-attached">
                            <div class="row row-pad-5">
                                <div class="col-md-6">
                                    <div class="form-group form-group-default" aria-required="true">
                                        <label>First Name</label>
                                        <input type="text" id="fname" class="form-control" name="fname" required="" aria-required="true" aria-invalid="true">
                                    </div>
                                    @*<input type="text" name="fname" placeholder="First Name" class="form-control" />*@
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-group-default" aria-required="true">
                                        <label>Last Name</label>
                                        <input type="text" name="lname" id="lname" class="form-control" />
                                    </div>
                                    @*<input type="text" name="lname" placeholder="Last Name" class="form-control" />*@
                                </div>
                            </div>
                            <div class="row row-pad-5">
                                <div class="col-md-6">
                                    <div class="form-group form-group-default" aria-required="true">
                                        <label>Card Number</label>
                                        <input type="text" name="cnumber" id="cnumber" placeholder="XXXX XXXX XXXX XXXX" class="form-control" />
                                    </div>
                                    @*<input type="text" name="cnumber" placeholder="Card Number" class="form-control" />*@
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group form-group-default" aria-required="true">
                                        <select name="month" placeholder="MM" class="cs-select cs-skin-slide cs-transparent form-control" data-init-plugin="cs-select" required>
                                            <option value="">MM</option>
                                            <option value="01">01</option>
                                            <option value="02">02</option>
                                            <option value="03">03</option>
                                            <option value="04">04</option>
                                            <option value="05">05</option>
                                            <option value="06">06</option>
                                            <option value="07">07</option>
                                            <option value="08">08</option>
                                            <option value="09">09</option>
                                            <option value="10">10</option>
                                            <option value="11">11</option>
                                            <option value="12">12</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group form-group-default" aria-required="true">
                                        <select name="year" class="cs-select cs-skin-slide cs-transparent form-control" data-init-plugin="cs-select" required>
                                            <option value="">YYYY</option>
                                            <option value="16">2016</option>
                                            <option value="17">2017</option>
                                            <option value="18">2018</option>
                                            <option value="19">2019</option>
                                            <option value="20">2020</option>
                                            <option value="21">2021</option>
                                            <option value="22">2022</option>
                                            <option value="23">2023</option>
                                            <option value="24">2024</option>
                                            <option value="25">2025</option>
                                            <option value="26">2026</option>
                                        </select>
                                    </div>
                                </div>
                            </div><!-- row -->
                            <div class="row row-pad-5">
                                <div class="col-md-6">
                                    <div class="form-group form-group-default" aria-required="true">
                                        <label>Last Name</label>
                                        <input id="cvv" type="text" name="cvv" class="form-control" />
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-group-default" aria-required="true">
                                        <select name="is_default" id="is_default" class="cs-select cs-skin-slide cs-transparent form-control" data-init-plugin="cs-select" required>
                                            <option value="">Set Default</option>
                                            <option value="1">YES</option>
                                            <option value="0">No</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="clearfix p-l-10 p-r-10">
                                    <div class="pull-right">
                                        <button class="btn btn-success btn-block m-t-5" type="submit">Add Payment</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
